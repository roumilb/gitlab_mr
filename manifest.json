{
    "name": "Gitlab merge request tools",
    "version": "2.5.0",
    "description": "Gitlab merge request tools",
    "permissions": [
        "storage",
        "declarativeContent",
        "activeTab"
    ],
    "browser_action": {
        "default_popup": "src/popup/index.html",
        "default_icon": "images/image.png"
    },
    "icons": {
        "16": "images/image.png",
        "128": "images/image.png"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "css": [
                "src/content/content.css"
            ],
            "js": [
                "src/content/helper_api.js",
                "src/content/count_discussions.js",
                "src/content/conditional_display.js",
                "src/content/my_mr.js",
                "src/content/index.js",
                "src/content/toggle.js"
            ]
        }
    ],
    "manifest_version": 2
}
